// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  slug     String    @id
  name     String
  Projects Project[]
}

model Technology {
  name    String    @id
  Project Project[]
}

model Project {
  id           String       @default(uuid())
  slug         String       @id
  name         String
  category     Category     @relation(fields: [categorySlug], references: [slug])
  categorySlug String
  summary      String
  technology   Technology[]
  image        String
}
